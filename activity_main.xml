

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d3557"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_gravity="center"
        android:background="#1d3557"
        android:fontFamily="@font/alegreya_bold"
        android:gravity="center"
        android:text="CAR EMI CALCULATOR"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/principal_amt"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="#98c1d9"
            android:ems="10"
            android:gravity="center"
            android:hint="Principal amount"
            android:textColorHint="#4E4D4D"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/down_payment"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="#98c1d9"
            android:ems="10"
            android:gravity="center"
            android:hint="Down Payment"
            android:inputType="text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textColorHint="#4E4D4D" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/interest_rate"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="#98c1d9"
            android:ems="10"
            android:gravity="center"
            android:hint="Interest Rate"
            android:inputType="text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textColorHint="#4E4D4D" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/loan_term"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="#98c1d9"
            android:ems="10"
            android:gravity="center"
            android:hint="Loan Term(in months)"
            android:textColorHint="#4E4D4D"
            android:inputType="text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/calculate_emi"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:backgroundTint="#F13123"
            android:gravity="center"
            android:onClick="calculate"
            android:text="Calculate monthly EMI"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/emi_result"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#98c1d9"
            android:gravity="center"
            android:hint="Result"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>
</LinearLayout>
